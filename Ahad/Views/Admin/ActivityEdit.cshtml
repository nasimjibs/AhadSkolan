<h2>ActivityEdit</h2>

@model Ahad.Models.PersonalActivityList

@{
    ViewBag.Title = "ActivityEdit";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="panel panel-default " style="margin-right:10px; margin-left:10px;">
    <div class="panel-heading"><h3>Activity Edit</h3></div>


    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.PersonalActivityId)

                <div class="form-group">
                    @Html.LabelFor(model => model.ActivityTitle, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ActivityTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ActivityTitle)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Input Type", new { @class = "control-label col-md-2" })

                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.TypeId, ViewBag.ActivityType as SelectList, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "PersonalActivityList")
        </div>
    </div>
</div>