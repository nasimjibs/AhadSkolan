@model Ahad.Models.Unit

@{
    ViewBag.Title = "UnitMonthlyAmountEdit";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="panel panel-default " style="margin-right:10px; margin-left:10px;">
    <div class=" panel-heading"><h3>@Model.Name Unit Edit Fixed Amount</h3></div>


    <div class="panel-body">
       @using (Html.BeginForm("UnitMonthlyAmounttEdit", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.UnitId)
                @Html.HiddenFor(model => model.Name)

                <div class="form-group">
                    @Html.LabelFor(model => model.FixedAmount, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.FixedAmount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FixedAmount)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "UnitMonthlyAmount")
        </div>
    </div>
</div>